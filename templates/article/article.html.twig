{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}

<div class="bg-primary p-2 text-white border border-white" style="max-width: 20rem;">
<p class="card-header">{{ article.titre }}</p>
<p>{{ article.contenu }}</p>
<p>{{ article.date | date('y-m-d') }}</p>
<p>{{ article.user.prenom }} {{ article.user.nom }}</p>
{% for cat in article.categorie %}
{{ cat.nom }}
<p><a class="text-white" href="{{ path('app_article_update',{'id': article.id}) }}">{{ update }}</a></p>
{% endfor %}
</div>


{% endblock %}
